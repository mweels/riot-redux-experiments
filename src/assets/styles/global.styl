*
  box-sizing border-box

body
  font 14px/17px "Proxima Nova"
  background darker-grey
  color light-grey
  padding 0
  margin 0

a
  color cyan

li a
  text-decoration none
  line-height 12px
  display inline-block
  border-bottom 1px solid grey
  text-shadow 1px 1px 0 dark-grey, 2px 1px 0 dark-grey, -1px 1px 0 dark-grey, -2px 1px 0 dark-grey
  transition 0.1s all

li.is-active a
  color white
  border-bottom-color cyan
  border-bottom-width 2px


.box
  border 1px solid dark-grey
  display block
  padding 20px
  margin 10px 0

.box > h1
  color white
  margin-top 0
